 <!-- Header Section -->
  <header class="gradient-header">
 <h1 class="center-align teal-text text-darken-2">
Comment Section 
    </h1>
  </header>

  <!-- Single Post Article -->
  <article class="container post card-panel z-depth-3" id="single-post">
    <div class="title-strip">
      <div class="title">
        <!-- Link to post by post id -->
        <a href="/post/{{post.id}}" class="teal-text text-darken-3" style="font-size: 2rem; font-weight: bold;">{{post.title}}</a>
      </div>
      <div class="meta grey-text text-darken-1">
        by {{post.user.username}} on {{format_date post.created_at}}
      </div>
    </div>
    <div class="text">
      <strong>{{post.post_text}}</strong>
    </div>
  </article>

  <!-- Comment Form (visible if logged in) -->
  {{#if loggedIn}}
  <div class="container">
    <form class="comment-form card-panel z-depth-2">
      <div class="input-field">
        <textarea id="comment-area" name="comment-body" class="materialize-textarea"></textarea>
        <label for="comment-area">Comment</label>
      </div>
      <button type="submit" class="btn waves-effect waves-light teal darken-2">Submit</button>
    </form>
  </div>
  {{/if}}

  <!-- Comments Partial -->
{{> comments post.comments}}


  <!-- Materialize JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <!-- Custom JS (comment functionality if logged in) -->
  {{#if loggedIn}}
  <script src="/js/comment.js"></script>
  {{/if}}