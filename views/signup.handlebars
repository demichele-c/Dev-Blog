<header>
  <h1>
    Blog-This-Tech
  </h1>
</header>
<form class="signup-form">
  <div class="multi-form">
    <div>
      <h2 class="subtitle">Sign Up</h2>
    </div>
    <div class="form-style">
      <div>
        <label for="username-signup">Username</label>
        <input type="text" class="input-style" id="username-signup" />
      </div>
      <div>
        <label for="email-signup">Email</label>
        <input type="text" class="input-style" id="email-signup" />
      </div>
      <div>
        <label for="password-signup">Password</label>
        <input type="password" class="input-style" id="password-signup" />
      </div>
      <div>
        <button type="submit">Sign Up!</button>
      </div>
      <div class="form-content">
        <a id="return-link" href="/login">Login instead</a>
      </div>
    </div>
  </div>
</form>

