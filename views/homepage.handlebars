<!-- Header Section -->
<header class="gradient-header">
  <div class="card-panel z-depth-1" style="background: none; box-shadow: none;">
    <h1 class="center-align teal-text text-darken-2">
      Welcome to Dev-Blog!
    </h1>
  </div>
</header>

<!-- Post List -->
<div class="container">
  <ul class="collection">
    {{#each posts as |post|}}
      <li class="collection-item">
        <article class="post">
          <div class="title-strip">
            <div class="title">
              <a href="/post/{{post.id}}" class="teal-text text-darken-3" style="font-size: 2rem; font-weight: bold;">
                {{post.title}}
              </a>
            </div>
            <div class="meta">
              by
              <span class="grey-text text-darken-2">
                {{post.user.username}}
              </span>
              on
              <span class="grey-text text-darken-1">
                {{format_date post.created_at}}
              </span>
            </div>
          </div>
          <div class="text">
            {{post.post_text}}
          </div>
        </article>
      </li>
    {{/each}}
  </ul>
</div>

<!-- Materialize JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
